{
  "name": "sibling-pds",
  "version": "1.0.0",
  "description": "User-centric Personal Data Store (PDS)",
  "private": true,
  "scripts": {
    "start:backend": "cd src/backend && npx nodemon -r dotenv/config index.ts",
    "start:frontend": "cd src/frontend && set PORT=3001 && npm run start",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "build": "cd src/frontend && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test-once": "npm run test:backend && cd src/frontend && npm run test-once",
    "test:backend": "jest -c jest.config.backend.js",
    "test:frontend": "cd src/frontend && npm test",
    "eject": "cd src/frontend && npm run eject"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.23.3",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^16.18.126",
    "@types/supertest": "^6.0.2",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "mongoose": "^8.11.0"
  }
}
