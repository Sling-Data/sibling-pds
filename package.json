{
  "name": "sibling-pds",
  "version": "1.0.0",
  "description": "User-centric Personal Data Store (PDS)",
  "private": true,
  "scripts": {
    "start:backend": "cd src/backend && npx nodemon -r dotenv/config index.ts",
    "start:frontend": "cd src/frontend && set PORT=3001 && npm run start",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "build": "npm run build:backend && cd src/frontend && npm run build",
    "build:backend": "tsc --project tsconfig.json",
    "build:frontend": "cd src/frontend && npm run build",
    "test": "jest --watch",
    "test-once": "jest --runInBand",
    "test:backend": "jest --watch --selectProjects backend",
    "test:backend-once": "jest --runInBand --selectProjects backend",
    "test:frontend": "jest --watch --selectProjects frontend",
    "test:frontend-once": "jest --runInBand --selectProjects frontend",
    "eject": "cd src/frontend && npm run eject"
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/plugin-transform-runtime": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.26.0",
    "@babel/runtime": "^7.26.9",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^16.18.126",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/supertest": "^6.0.2",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest-editor-support": "^32.0.0-beta.1",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^26.0.0",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@googleapis/gmail": "^12.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "google-auth-library": "^9.15.1",
    "googleapis": "^146.0.0",
    "mongoose": "^8.11.0"
  }
}
